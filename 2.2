class Ball:
    def __init__(self, x=0, y=0):
        # Конструктор класса. Устанавливает начальные координаты мяча (по умолчанию 0, 0).
        self.__x = x  # Приватная переменная для координаты x
        self.__y = y  # Приватная переменная для координаты y

    def set_xy(self, x, y):
        # Метод для установки новых координат мяча.
        self.__x = x
        self.__y = y

    def set_xy_speed(self, x_disp, y_disp):
        # Метод для установки скорости мяча по координатам x и y.
        self.__x += x_disp
        self.__y += y_disp

    def move(self, x_disp, y_disp):
        # Метод для перемещения мяча на заданное расстояние по координатам x и y.
        self.__x += x_disp
        self.__y += y_disp

    def __str__(self):
        # Метод для представления объекта в виде строки.
        return f"Ball @ ({self.__x}, {self.__y})"


class TestBall:
    def __init__(self):
        # Создаем объект класса Ball и тестируем его методы.
        ball = Ball(1, 1)
        print("Исходное положение мяча:", ball)

        # Перемещаем мяч и выводим его новое положение.
        ball.move(2, 3)
        print("Новое положение мяча после перемещения:", ball)

        # Устанавливаем новые координаты мяча и скорость и выводим его положение.
        ball.set_xy(5, 5)
        ball.set_xy_speed(2, 2)
        print("Положение мяча после установки новых координат и скорости:", ball)


# Создаем объект класса TestBall для тестирования.
test_ball = TestBall()
